{{#if homePosts}}
  {{#each homePosts}}
    <div class="card">
      <div class="card-top">
        <div class="card-title">
          <h1>{{title}}</h1>
        </div>
        <div class="card-postTime">
          <span>{{format_date createdAt}}</span>
        </div>
      </div>
      <div class="card-content">
        {{#each contents}}
          <p>{{content_text}}</p>
        {{/each}}
      </div>
    </div>
  {{/each}}
{{/if}}