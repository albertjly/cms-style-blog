{{#if homePosts}}
{{#each homePosts}}
<div class="card">
    <div class="card-top">
        <div class="card-title">
            <h1>{{title}}</h1>
        </div>
        <div class="card-postTime">
            <span>{{createdAt}}</span>
        </div>
    </div>
    <div class="card-content">
        {{> post-content}}
    </div>
</div>
{{/each}}
{{/if}}
